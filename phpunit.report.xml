<phpunit bootstrap="./vendor/autoload.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="false"
         syntaxCheck="true"
         verbose="true"
         colors="false">

    <php>
        <ini name="error_reporting" value="-1" />
    </php>

    <testsuites>
        <testsuite name="Ydin Test Suite">
            <directory>./local/ydin-ydin/test/</directory>
        </testsuite>
    </testsuites>

    <!-- about report & coverage -->
    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
        <log type="coverage-html" target="_build/coverage" highlight="true" />
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">./local/ydin-ydin/src/</directory>
        </whitelist>
    </filter>

</phpunit>
